<h3>Edit your post</h3>
<form action="/posts/<%= @post.id %>" method="post">
	<input type="hidden" name="_method" value="put">

	<label for="user_name">User Name:<br>
		<select name="post[author_id]">
			<% @authors.each do |author| %>
				<option <%= "selected" if author == @post.author %> value="<%= author.id %>"><%= author.user_name %></option>
				<% end %>
		</select>
	</label><br>

	<label for="image_url">Image URL:<br>
		<input type="text" name="post[image_url]" value="<%= @post.image_url %>">
	</label><br>

	<label for="caption">Caption:<br>
		<input type="text" name="post[caption]" value="<%= @post.caption %>">
	</label><br>
	<input type="submit" name="submit">
</form>
